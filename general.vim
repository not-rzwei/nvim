set autochdir

" Eye
colorscheme monokai_pro
set cursorline
set number
set relativenumber
set noshowmode

" Search
set ignorecase
set smartcase
set infercase
set incsearch
set hlsearch
set wrapscan
set showmatch

" Line
set tabstop=4
set softtabstop=4
set shiftwidth=4
set smarttab
set expandtab
set autoindent
set smartindent
set shiftround
set textwidth=80
